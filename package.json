{
  "name": "svite-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/playground/*",
    "packages/templates/*"
  ],
  "scripts": {
    "lint": "run-p lint:script lint:style",
    "test": "run-s test:serve test:build",
    "test:serve": "jest",
    "test:serve:debug": "cross-env VITE_DEBUG_SERVE=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:build": "cross-env VITE_TEST_BUILD=1 jest",
    "test:build:debug": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:ci": "run-s test:ci:serve test:ci:build",
    "test:ci:serve": "cross-env VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/serve/jest-results.json\" ",
    "test:ci:build": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/build/jest-results.json\"",
    "build:ci": "run-s build:ci:vite-plugin-svelte build:ci:svite",
    "build:ci:vite-plugin-svelte": "yarn --cwd packages/vite-plugin-svelte build-bundle",
    "build:ci:svite": "yarn --cwd packages/svite build-bundle",
    "build": "run-s build:vite-plugin-svelte build:svite",
    "build:vite-plugin-svelte": "yarn --cwd packages/vite-plugin-svelte build",
    "build:svite": "yarn --cwd packages/svite build",
    "lint:script": "eslint --ignore-path .gitignore '**/*.{js,ts,svelte,html,svx,md}'",
    "lint:style": "stylelint --ignore-path .gitignore '**/*.{css,scss,svelte,html,js,ts,svx,md}'",
    "lint:fix": "run-s lint:fix:script lint:fix:style",
    "lint:fix:script": "yarn lint:script --fix",
    "lint:fix:style": "yarn lint:style --fix",
    "format": "prettier --ignore-path .gitignore '**/*.{css,scss,svelte,html,js,ts,svx,md}' --check",
    "format:fix": "yarn format --write",
    "fixup": "run-s lint:fix format:fix",
    "update-deps": "ncu -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@microsoft/api-extractor": "^7.13.2",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chalk": "^4.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-markdown": "^2.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-svelte3": "^3.1.2",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.4",
    "minimist": "^1.2.5",
    "npm-check-updates": "^11.1.10",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.9.1",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.4",
    "sirv": "^1.0.11",
    "slash": "^3.0.0",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "svelte": "^3.35.0",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,svelte,html,md,svx}": "eslint --fix",
    "*.{css,scss,svelte,html,js,ts,svx,md}": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
